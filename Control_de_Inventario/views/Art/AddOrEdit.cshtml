@model Control_de_Inventario.Models.Articulo
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Art", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.id_articulo)
    <div class="form-group">
        @Html.LabelFor(model => model.art_nombre,"Articulo", new { @class = "control-label" })
        @Html.EditorFor(model => model.art_nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.art_nombre)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.art_descripcion,"Descripcion", new { @class = "control-label" })
        @Html.EditorFor(model => model.art_descripcion, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.art_descripcion)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.art_precio_uni,"Precio Unitario", new { @class = "control-label" })
     
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.art_precio_uni, new { htmlAttributes = new { @class = "form-control", type = "text", pattern = "[0-9]+([,][0-9]{1,2})?" } })
            </div>
        </div>
    <div class="form-group">
        @Html.LabelFor(model => model.art_precio_mayor_1,"Precio Mayorista A", new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.art_precio_mayor_1, new { htmlAttributes = new { @class = "form-control", type = "text", pattern = "[0-9]+([,][0-9]{1,2})?" } })
        </div>
        </div>
    <div class="form-group">

        @Html.LabelFor(model => model.art_precio_mayor_2,"Precio Mayorista B", new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.art_precio_mayor_2, new { htmlAttributes = new { @class = "form-control", type = "text", pattern = "[0-9]+([,][0-9]{1,2})?" } })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <input type="reset" value="Limpiar" class="btn" />
    </div>
}